<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_settle">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_settle_statistics_panel"
        android:padding="20dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_normal"
                android:textColor="@color/white"
                android:text="合计"/>

            <TextView
                android:id="@+id/tv_order_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/yellow"
                android:layout_marginLeft="20dp"
                android:textSize="@dimen/font_large"
                android:gravity="end"
                android:text="0.00"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divide_size"
            android:background="@color/white"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_normal"
                android:textColor="@color/white"
                android:text="抹零"/>

            <TextView
                android:id="@+id/tv_clean_fraction_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="20dp"
                android:textColor="@color/yellow"
                android:textSize="@dimen/font_large"
                android:gravity="end"
                android:text="0.00"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_normal"
                android:textColor="@color/white"
                android:text="折扣"/>

            <TextView
                android:id="@+id/tv_discount_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="20dp"
                android:textColor="@color/yellow"
                android:textSize="@dimen/font_large"
                android:gravity="end"
                android:text="0.00"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_normal"
                android:textColor="@color/white"
                android:text="已支付"/>

            <TextView
                android:id="@+id/tv_payed_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="20dp"
                android:textColor="@color/yellow"
                android:textSize="@dimen/font_large"
                android:gravity="end"
                android:text="0.00"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_normal"
                android:textColor="@color/white"
                android:text="还需支付"/>

            <TextView
                android:id="@+id/tv_surplus_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="20dp"
                android:textColor="@color/yellow"
                android:textSize="@dimen/font_large"
                android:gravity="end"
                android:text="0.00"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divide_size"
            android:background="@color/white"/>


        <LinearLayout
            android:id="@+id/layout_use_coupon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:padding="6dp"
            android:background="@drawable/btn_main_round_selector">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_normal"
                android:textColor="@color/white"
                android:text="优惠券抵扣:"/>

            <TextView
                android:id="@+id/tv_coupon_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="20dp"
                android:gravity="end"
                android:textColor="@color/yellow"
                android:textSize="@dimen/font_normal"
                android:drawableRight="@mipmap/ic_arrow_white"
                android:drawablePadding="9dp"
                android:text="0.00"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_vip_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:padding="6dp"
            android:background="@drawable/btn_main_round_selector">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_normal"
                android:textColor="@color/white"
                android:text="会员:"/>

            <TextView
                android:id="@+id/tv_member"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="20dp"
                android:gravity="end"
                android:textColor="@color/yellow"
                android:textSize="@dimen/font_normal"
                android:drawableRight="@mipmap/ic_arrow_white"
                android:drawablePadding="9dp"
                android:text="未登陆"/>

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_pay_cash"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:drawableTop="@mipmap/ic_pay_cash"
            android:layout_marginLeft="3dp"
            android:drawablePadding="6dp"
            android:gravity="center"
            android:background="@drawable/btn_main_round_selector"
            android:text="现金收款"
            android:textColor="@color/white"
            android:textSize="@dimen/font_small" />

        <TextView
            android:id="@+id/tv_pay_bank_card"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:drawableTop="@mipmap/ic_pay_bank"
            android:layout_marginLeft="8dp"
            android:drawablePadding="6dp"
            android:gravity="center"
            android:background="@drawable/btn_main_round_selector"
            android:text=" 银行卡 "
            android:textColor="@color/white"
            android:textSize="@dimen/font_small" />

        <TextView
            android:id="@+id/tv_pay_barcode"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:drawableTop="@mipmap/ic_pay_online"
            android:layout_marginLeft="8dp"
            android:drawablePadding="4dp"
            android:gravity="center"
            android:background="@drawable/btn_main_round_selector"
            android:text="扫码收款"
            android:textColor="@color/white"
            android:textSize="@dimen/font_small" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">

        <RelativeLayout
            android:id="@+id/layout_fraction_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_fraction_price"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingBottom="13dp"
            android:paddingTop="13dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="抹零"
                android:drawablePadding="5dp"
                android:layout_centerHorizontal="true"
                android:drawableLeft="@mipmap/ic_fraction"
                android:textColor="@color/white"
                android:textSize="15sp" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/layout_discount_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_discount_price"
            android:layout_weight="1"
            android:layout_marginLeft="7dp"
            android:gravity="center"
            android:paddingBottom="13dp"
            android:paddingTop="13dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="打折"
                android:drawablePadding="5dp"
                android:layout_centerHorizontal="true"
                android:drawableLeft="@mipmap/ic_discount"
                android:textColor="@color/white"
                android:textSize="15sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_debt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_debt"
            android:layout_weight="1"
            android:layout_marginLeft="7dp"
            android:paddingBottom="13dp"
            android:paddingTop="13dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="挂账"
                android:drawablePadding="5dp"
                android:layout_centerInParent="true"
                android:drawableLeft="@mipmap/ic_debt"
                android:textColor="@color/white"
                android:textSize="15sp" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>