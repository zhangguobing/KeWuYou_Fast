<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false">

    <fragment
        android:id="@+id/order_fragment"
        android:name="com.weiwoju.kewuyou.ui.fragment.OrderFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"/>

    <fragment
        android:id="@+id/product_fragment"
        android:name="com.weiwoju.kewuyou.ui.fragment.ProductFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.2"/>

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.7">
        <fragment
            android:id="@+id/settle_fragment"
            android:name="com.weiwoju.kewuyou.ui.fragment.SettleFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </FrameLayout>

</LinearLayout>