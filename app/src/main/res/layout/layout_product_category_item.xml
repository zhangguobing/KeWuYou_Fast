<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_product_category_selector">

    <cn.bingoogolapple.badgeview.BGABadgeFrameLayout
        android:id="@+id/badge_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/spacing_minor"
        android:paddingBottom="@dimen/spacing_minor"
        android:paddingLeft="@dimen/spacing_micro"
        android:paddingRight="@dimen/spacing_micro"
        app:badge_gravity="rightTop">

    <TextView
        android:id="@+id/tv_category_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:maxLines="2"
        android:textSize="@dimen/font_normal"
        android:textColor="@color/yellow" />

    </cn.bingoogolapple.badgeview.BGABadgeFrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divide_size"
        android:layout_alignParentBottom="true"
        android:background="@color/divider" />

</RelativeLayout>